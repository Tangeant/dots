# ex - archive extractor
# usage: ex <file>
ex() {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

#youtube-dl audio with search with 50 songs
#To find and stream audio from the terminal with yta <search terms>
function yta() {
    mpv --ytdl-format=bestaudio ytdl://ytsearch50:"$*"
}

#youtube-dl video with search
#To find and stream video from the terminal with ytv <search terms>
function ytv() {
    mpv --ytdl-format=bestvideo+bestaudio/best ytdl://ytsearch:"$*"
}

#A better copy keeps permissions, groups, and owners
cpv() {
    rsync -pogbr -hhh --backup-dir=/tmp/rsync -e /dev/null --progress "$@"
}

